# Dockerfile khusus untuk backend.go (tanpa Gin)

FROM golang:1.21-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build backend.go
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-w -s" -o backend backend.go

FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

COPY --from=builder /app/backend .

EXPOSE 8090

CMD ["./backend"]
